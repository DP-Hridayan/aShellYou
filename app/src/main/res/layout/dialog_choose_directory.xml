<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_directory"
            app:tint="?attr/colorPrimary" />

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/configure_save_directory"
            android:textAlignment="center"
            style="@style/DialogTitleAppearance" />

    <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/des_configure_save_directory"
            style="@style/DialogDescriptionAppearance" />

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp">

        <TextView
                android:id="@+id/path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.90"
                android:textAppearance="?attr/textAppearanceBodyLarge" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.chip.Chip
            android:id="@+id/chip_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:checkable="false"
            android:checked="false"
            android:text="@string/default_folder"
            app:chipBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:chipIcon="@drawable/rotate_reset"
            app:ensureMinTouchTargetSize="true"
            style="@style/Widget.Material3.Chip.Assist" />

    <Button
            android:id="@+id/folder_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/folder_picker"
            app:icon="@drawable/ic_directory"
            style="@style/Widget.Material3.Button.Icon" />

</LinearLayout>
