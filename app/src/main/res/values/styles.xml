<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style
        name="aShellYou.AppTheme"
        parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style
        name="ExpandedToolbarTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textSize">33.0sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style
        name="ItemTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="ItemDescription"
        parent="aShellYou.AppTheme">
        <item name="android:textSize">13.0sp</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style
        name="LatestVersionTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">25.0sp</item>
    </style>

    <style
        name="OtherVersionTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
        <item name="android:textSize">21.0sp</item>
    </style>
    //The info cards that gives tips or hints
    <style
        name="InfoCardStyle"
        parent="aShellYou.AppTheme">
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:elevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
    </style>
    <style
        name="InfoCardTitle"
        parent="aShellYou.AppTheme">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
    </style>
    <style
        name="InfoCardDescription"
        parent="aShellYou.AppTheme">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
    </style>

    <style
            name="DialogTitleAppearance"
        parent="aShellYou.AppTheme">
        <item name="android:alpha">1</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
    </style>

    <style
            name="DialogDescriptionAppearance"
        parent="aShellYou.AppTheme">
        <item name="android:alpha">1</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="CardViewTopCornersRounded">
        <item name="shapeAppearance">@style/TopCornersRoundedShape</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style
        name="TopCornersRoundedShape"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">2dp</item>
        <item name="cornerSizeBottomLeft">2dp</item>
    </style>


    <style name="CardViewBottomCornersRounded">
        <item name="shapeAppearance">@style/BottomCornersRoundedShape</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style
        name="BottomCornersRoundedShape"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopRight">2dp</item>
        <item name="cornerSizeTopLeft">2dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    // for devices running A11 and below
    <style
        name="ThemeOverlay.aShellYou.AmoledThemeBelowV31"
        parent=""
        tools:ignore="PrivateResource">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorSurfaceContainerLowest">@color/black</item>
        <item name="colorSurfaceContainerHighest">@color/black</item>
        <item name="colorSurfaceDim">@color/black</item>
    </style>

</resources>
